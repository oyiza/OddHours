<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.oddhours.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_addjob"
        android:name="com.example.oddhours.ui.addjob.AddJobFragment"
        android:label="@string/title_add_job"
        tools:layout="@layout/fragment_add_job" />

    <fragment
        android:id="@+id/shifts"
        android:name="com.example.oddhours.ui.shifts.ShiftsFragment"
        android:label="Shifts"
        tools:layout="@layout/fragment_shifts" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.oddhours.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

